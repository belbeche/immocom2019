{# Page de la recherche #}
{% extends 'base.html.twig' %}

{% block title %}Tous nos biens !{% endblock %}

{% block body %}

<div class="container" style="margin-top: 10px;">
    <div class="jumbotron container-fluide">
        <div class="container row align-items-end ">
          <div class="col" style="display:inline-flex;"> 
          </div>
          {{ form_start(form) }}
            <div class="col" style="display:flex;"> 
            <label> Je veux : </label>
            <div class="form-group" style="margin-left: 10px;">{{ form_row(form.location, {'label': 'Louer'}) }} </div>
            <div class="form-group" style="margin-left: 10px;">{{ form_row(form.Achat, {'label': 'Acheter'}) }} </div>
            </div>
            <div class="col"> 
            {{ form_row(form.minSurface) }}
            </div>
            <div class="col"> 
            {{ form_row(form.maxPrice) }}
            </div>
            <div class="col"> 
                {{ form_row(form.annonces) }} 
            </div>
          {{ form_rest(form) }}
          {{ form_end(form) }}
        </div>
      </div>
    <div class="row">
        {% for annonce in annonces %}
            <div class="col-md-4">
                {% include 'annonces_immobiliere/Annonces.html.twig' %}
            </div>
        {% endfor %}
    </div>
    <div class="pagination"> 
        {{ knp_pagination_render(annonces) }}
    </div>
</div>
{% endblock %}
