{{ form_start(form) }}
<div class="row">
    <div class="col-md-4"> {{ form_row(form.titre) }} </div>
    <div class="col-md-4"> {{ form_row(form.surface) }} </div>
    <div class="col-md-4"> {{ form_row(form.price) }} </div> 
</div>
<div class="row">
    <div class="col-md-2"> {{ form_row(form.rooms) }} </div>
    <div class="col-md-2"> {{ form_row(form.bedrooms) }} </div>
    <div class="col-md-2"> {{ form_row(form.chauffage) }} </div>
    <div class="col-md-2"> {{ form_row(form.floor) }} </div>
    <div class="col-md-4"> {{ form_row(form.description) }} </div>
</div>
<div class="row">
    <div class="col-md-5"> {{ form_row(form.adresse) }} </div>
    <div class="col-md-2"> {{ form_row(form.ville) }} </div>
    <div class="col-md-4"> {{ form_row(form.code_postale) }} </div>
    <div class="col-md-2"> {{ form_row(form.sold) }} </div>
</div>
<button class="btn btn-primary"> {{ button|default('Enregistrer les modifications') }} </button>
{{ form_end(form) }}